<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:id="@+id/container1"
            android:background="@color/colorAccent"
            android:padding="2dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp" android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image2"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"/>

                    <TextView android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/date2"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:textSize="12sp"
                        android:id="@+id/profile_image3"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/date3"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image4"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"/>

                    <TextView android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/date4"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image5"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"/>

                    <TextView android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/date5"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"/>

                    <TextView android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView android:id="@+id/pod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <androidx.appcompat.widget.AppCompatButton android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/setwallbt" android:background="@color/colorSecond" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="set wallpaper" android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatButton android:textStyle="bold" android:textColor="@color/colorAccent" android:id="@+id/downloadbt" android:background="@color/purple_700" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="2dp" android:text="download" android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView android:textColor="@color/colorDark" android:id="@+id/description" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAlignment="center"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

